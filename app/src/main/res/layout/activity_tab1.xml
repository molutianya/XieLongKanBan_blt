<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="960dp"
    android:layout_height="550dp"
    android:orientation="vertical"
    android:background="#000"
    android:paddingRight="12dp"
    android:paddingLeft="12dp"
    >
    <TextView
        android:layout_width="125dp"
        android:layout_height="15dp"
        android:id="@+id/time001"
        android:text="2019:12:12 08:08:08"
        android:textSize="12dp"
        android:gravity="center"
        android:textColor="#fff"
        android:layout_marginLeft="815dp"
        />

    <TextView
        android:layout_width="960dp"
        android:layout_height="wrap_content"
        android:text="生 产 效 率 汇 总 看 板"
        android:textStyle="bold"
        android:textSize="25dp"
        android:textColor="#fff"
        android:shadowColor="#FFD700"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="3.0"
        android:gravity="center"
        android:layout_marginTop="-10dp"
        />

    <LinearLayout
        android:layout_width="940dp"
        android:layout_height="200dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="20dp"
            >

            <TextView
                android:layout_width="85dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="生产日期"
                android:background="#00BFFF"
                android:textColor="#000"
                android:textSize="12dp" />

            <TextView
                android:layout_width="85dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="应到岗人数"
                android:background="#00BFFF"
                android:layout_marginLeft="1dp"
                android:textColor="#000"
                android:textSize="12dp" />

            <TextView
                android:layout_width="85dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="实到岗人数"
                android:background="#00BFFF"
                android:layout_marginLeft="1dp"
                android:textColor="#000"
                android:textSize="12dp" />

            <TextView
                android:layout_width="85dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="标准工时"
                android:background="#00BFFF"
                android:layout_marginLeft="1dp"
                android:textColor="#000"
                android:textSize="12dp" />

            <TextView
                android:layout_width="85dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="正常生产"
                android:background="#00BFFF"
                android:layout_marginLeft="1dp"
                android:textColor="#000"
                android:textSize="12dp" />

            <TextView
                android:layout_width="85dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="稼动率"
                android:background="#00BFFF"
                android:layout_marginLeft="1dp"
                android:textColor="#000"
                android:textSize="12dp" />

            <TextView
                android:layout_width="85dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="目标稼动率"
                android:background="#00BFFF"
                android:layout_marginLeft="1dp"
                android:textColor="#000"
                android:textSize="12dp" />

            <TextView
                android:layout_width="85dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="计划数量"
                android:background="#00BFFF"
                android:layout_marginLeft="1dp"
                android:textColor="#000"
                android:textSize="12dp" />

            <TextView
                android:layout_width="85dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="实际数量"
                android:background="#00BFFF"
                android:layout_marginLeft="1dp"
                android:textColor="#000"
                android:textSize="12dp" />

            <TextView
                android:layout_width="85dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="计划达成率"
                android:background="#00BFFF"
                android:layout_marginLeft="1dp"
                android:textColor="#000"
                android:textSize="12dp" />

            <TextView
                android:layout_width="85dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="实际达成率"
                android:background="#00BFFF"
                android:layout_marginLeft="1dp"
                android:textColor="#000"
                android:textSize="12dp" />

        </TableRow>
        <GridView
            android:id="@+id/grid001"
            android:layout_width="940dp"
            android:layout_height="170dp"
            android:columnWidth="940dp"
            >

        </GridView>


    </LinearLayout>
    <TextView
        android:layout_width="985dp"
        android:layout_height="wrap_content"
        android:text="产品质量缺陷柏拉图"
        android:textColor="#fff"
        android:textSize="18dp"
        android:textStyle="bold"
        android:gravity="center"
        />

    <com.github.mikephil.charting.charts.CombinedChart xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/manager_chart"
        android:layout_width="960dp"
        android:layout_height="240dp"
        tools:context="com.sis.pcust.activity.ManagerChartActivity" />


</LinearLayout>